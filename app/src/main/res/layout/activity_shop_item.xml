<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopItem">

    <ImageView
        android:id="@+id/backBtnItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />


    <ImageView
        android:id="@+id/colorPickBG_shop"
        android:layout_width="53dp"
        android:layout_height="198dp"
        android:layout_marginStart="358dp"
        android:layout_marginTop="142dp"
        android:src="@drawable/colorpickbg_shop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sizePickBG_shop"
        android:layout_width="53dp"
        android:layout_height="154dp"
        android:layout_marginStart="358dp"
        android:layout_marginTop="340dp"
        android:src="@drawable/sizepickbg_shop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView86"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/rectangle_shopitem" />

    <TextView
        android:id="@+id/textView57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="112dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/garetbold"
        android:text="P 10,057.22"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/btnBuyNow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toEndOf="@+id/textView58"
        app:layout_constraintTop_toTopOf="@+id/imageView86"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/garet"
        android:text="Price"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/btnBuyNow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemNameTitle"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnBuyNow"
        android:layout_width="330dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/inputbg"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/garetbold"
        android:text="Buy Now"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView86"
        app:layout_constraintStart_toStartOf="@+id/imageView86"
        app:layout_constraintTop_toTopOf="@+id/imageView86"
        app:layout_constraintVertical_bias="0.903" />

    <TextView
        android:id="@+id/itemDescription_shop"
        android:layout_width="331dp"
        android:layout_height="110dp"
        android:fontFamily="@font/garet"
        android:text="The hoodie is made in a robust USA cotton fleece to contribute body and drape. The fit is relaxed in the body with slightly dropped shoulders, a kangaroo pocket, rib-knit waist hem, and cuffs. Branding details include an Eternal logo in heavyweight flocking across the back, and a Fear of God leather label stitched on the double-layered hood."
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView86"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969" />

    <TextView
        android:id="@+id/itemDescriptionTitle_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/garetbold"
        android:text="@string/DescriptionTitle"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/itemDescription_shop"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/itemNameTitle"
        android:layout_width="193dp"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="66dp"
        android:fontFamily="@font/garetbold"
        android:text="FEAR OF GOD Hoodie"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/btnBuyNow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView86" />

    <ImageView
        android:id="@+id/imageView105"
        android:layout_width="271dp"
        android:layout_height="261dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toTopOf="@+id/itemDescriptionTitle_shop"
        app:layout_constraintEnd_toStartOf="@+id/colorPickBG_shop"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78"
        app:srcCompat="@drawable/fog_jacket" />

    <ImageView
        android:id="@+id/shoppingCart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shoppingbag" />

    <ImageView
        android:id="@+id/imageView124"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="365dp"
        android:layout_marginTop="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brown_circle" />

    <ImageView
        android:id="@+id/imageView125"
        android:layout_width="41dp"
        android:layout_height="35dp"
        android:layout_marginStart="365dp"
        android:layout_marginTop="222dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blue_circle" />

    <ImageView
        android:id="@+id/imageView126"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:layout_marginStart="365dp"
        android:layout_marginTop="265dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/black_circle" />

</androidx.constraintlayout.widget.ConstraintLayout>