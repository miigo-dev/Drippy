<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopItem">

    <ImageView
        android:id="@+id/imageView87"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imageView91"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shoppingbag" />

    <ImageView
        android:id="@+id/colorPickBG_shop"
        android:layout_width="53dp"
        android:layout_height="198dp"
        android:layout_marginStart="356dp"
        android:layout_marginTop="78dp"
        android:src="@drawable/colorpickbg_shop"
        app:layout_constraintBottom_toTopOf="@+id/sizePickBG_shop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView91" />

    <ImageView
        android:id="@+id/sizePickBG_shop"
        android:layout_width="53dp"
        android:layout_height="154dp"
        android:layout_marginStart="356dp"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="74dp"
        android:src="@drawable/sizepickbg_shop"
        app:layout_constraintBottom_toTopOf="@+id/itemDescription_shop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView86"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/rectangle_shopitem" />

    <Button
        android:id="@+id/btnBuyNow"
        android:layout_width="251dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/inputbg"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/garetbold"
        android:text="Buy Now"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView86"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="@+id/imageView86"
        app:layout_constraintTop_toTopOf="@+id/imageView86"
        app:layout_constraintVertical_bias="0.903" />

    <TextView
        android:id="@+id/itemDescription_shop"
        android:layout_width="331dp"
        android:layout_height="110dp"
        android:fontFamily="@font/garet"
        android:text="The hoodie is made in a robust USA cotton fleece to contribute body and drape. The fit is relaxed in the body with slightly dropped shoulders, a kangaroo pocket, rib-knit waist hem, and cuffs. Branding details include an Eternal logo in heavyweight flocking across the back, and a Fear of God leather label stitched on the double-layered hood."
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView86"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969" />

    <TextView
        android:id="@+id/itemDescriptionTitle_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/garetbold"
        android:text="@string/DescriptionTitle"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/itemDescription_shop"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/itemNameTitle"
        android:layout_width="193dp"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="66dp"
        android:fontFamily="@font/garetbold"
        android:text="FEAR OF GOD Hoodie"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/btnBuyNow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView86" />

</androidx.constraintlayout.widget.ConstraintLayout>